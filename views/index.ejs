    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-4">
        <% files.forEach(file => { %>
          <div class="bg-gray-800 border border-gray-700 rounded-lg shadow-lg p-4 transform transition-transform hover:scale-105">
            <h2 class="font-bold text-lg mb-2 text-center"><%= file.heading %></h2>
            <div class="flex justify-around mt-4">
              <a href="/view/<%= file.fileName %>" class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-200">View</a>
              <a href="/edit/<%= file.fileName %>" class="bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700 transition duration-200">Edit</a>
